<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp"
    tools:context=".ui.detail.DetailVideogameActivity">


    <ImageView
        android:id="@+id/image_Videogame"
        android:layout_width="359dp"
        android:layout_height="248dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/videogame_card_style"
        android:radius="5dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nom_videogame"
        android:layout_width="331dp"
        android:layout_height="79dp"
        android:layout_marginTop="16dp"
        android:text="Titulo_juego"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_Videogame"></TextView>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="318dp"
        android:layout_height="17dp"
        android:text="Aquí tienes las mejores ofertas disponibles"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/list_precios"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.408"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nom_videogame"
        app:layout_constraintVertical_bias="0.448" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_precios"
        android:layout_width="327dp"
        android:layout_height="185dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/b_seguimiento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b_seguimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:text="Añadir a seguimiento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>